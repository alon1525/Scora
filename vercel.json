{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/cron.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron",
      "dest": "api/cron.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    }
  ],
  // "crons": [
  //   {
  //     "path": "/api/test-cron",
  //     "schedule": "0 */6 * * *"
  //   }
  // ],
  "env": {
    "NODE_ENV": "production",
    "CRON_SECRET": "your-secret-key-here"
  }
}
